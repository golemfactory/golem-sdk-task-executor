{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testMatch": ["src/*.spec.ts"],
  "reporters": [
    "default",
    [
      "jest-junit",
      {
        "outputDirectory": "reports",
        "outputName": "unit-report.xml"
      }
    ],
    [
      "github-actions",
      {
        "silent": false
      }
    ],
    "summary"
  ]
}