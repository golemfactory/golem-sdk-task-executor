{
  "name": "@golem-sdk/task-executor",
  "version": "1.0.0",
  "description": "NodeJs and WebBrowser library to sending tasks to the Golem Network, monitoring their progress, and receiving results.",
  "repository": "https://github.com/golemfactory/golem-sdk-task-executor",
  "keywords": [
    "golem",
    "network",
    "distributed",
    "computing",
    "sdk",
    "internet",
    "computer",
    "task-executor",
    "task",
    "executor",
    "golem-js",
    "glm"
  ],
  "main": "dist/task-executor.cjs.js",
  "browser": "dist/task-executor.min.js",
  "module": "dist/task-executor.es.js",
  "types": "dist/index.d.ts",
  "jsdelivr": "dist/task-executor.min.js",
  "unpkg": "dist/task-executor.min.js",
  "scripts": {
    "build": "rollup -c --forceExit",
    "dev": "rollup -c -w",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest --config jest.config.json",
    "test:e2e": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config tests/e2e/jest.config.json tests/e2e/**.spec.ts --runInBand --forceExit",
    "test:cypress": "cypress run",
    "test:examples": "tsx tests/examples/examples.test.ts",
    "lint": "npm run lint:ts && npm run lint:ts:tests && npm run lint:eslint",
    "lint:ts": "tsc --project tsconfig.json --noEmit",
    "lint:ts:tests": "tsc --project tests/tsconfig.json --noEmit",
    "lint:eslint": "eslint .",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "prepare": "husky install"
  },
  "files": [
    "dist"
  ],
  "author": "GolemFactory <contact@golem.network>",
  "license": "LGPL-3.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@golem-sdk/golem-js": "^2.0.0",
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@johanblumenberg/ts-mockito": "^1.0.41",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "cross-env": "^7.0.3",
    "cypress": "^13.5.1",
    "cypress-log-to-output": "^1.1.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.6",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.1.1",
    "rollup": "^4.9.0",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-ignore": "^1.0.10",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "rollup-plugin-visualizer": "^5.11.0",
    "semantic-release": "^23.0.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "tsconfig-paths": "^4.2.0",
    "tslint-config-prettier": "^1.18.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}
